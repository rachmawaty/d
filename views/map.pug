script.
	var mapdata = !{mapdata};

	var map;
	function initMap() {
		map = new google.maps.Map(document.getElementById('map'), {
			center: {lat: 53.483959, lng: -2.244644},
			zoom: 11
		});

		var bounds = new google.maps.LatLngBounds();
		var mapOptions = {
			mapTypeId: 'roadmap'
		};
		
		//- for (var i = 0; i<mapdata.length; i++){
		var contents = [];
		var infoWindow = new google.maps.InfoWindow(), marker, i;
		for (var i = 0; i<mapdata[0].rows.length; i++){
			var content = '<div class="info_content">' +
						'<h3>'+mapdata[0].rows[i]['Area'].value+'</h3>'+
						'<p>'+mapdata[0].title + ": " + 
						mapdata[0].rows[i]['Rank'].value+'</p></div>';
			contents.push(content);
			var longitude = Number(mapdata[0].rows[i]['Longitude'].value);
			var latitude = Number(mapdata[0].rows[i]['Latitude'].value);
			var _position = new google.maps.LatLng(latitude, longitude);
			var _title = mapdata[0].rows[i]['Area'].value;
			bounds.extend(_position);
			marker = new google.maps.Marker({
			    position: _position,
			    map: map,
			    title: _title
			});

			// Allow each marker to have an info window    
			google.maps.event.addListener(marker, 'click', (function(marker, i) {
			    return function() {
			        infoWindow.setContent(contents[i]);
			        infoWindow.open(map, marker);
			    }
			})(marker, i));
		}
		//- }
	}

script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDcV5xnVZ71OOdC16XB7I3zwU9FuiLyFOc&callback=initMap")

